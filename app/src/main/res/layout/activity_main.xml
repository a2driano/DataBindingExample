        <!--android:text="@{user.getSurName}"/>-->

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->main.clickToast()}"
            android:text="Button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@{@string/name_sentence(user.getName, user.getSurName)}"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@{user.getmUrl}"
            app:error="@{@drawable/error}"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@{viewModel.user.firstName}"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            app:addEditTextWatcher="@{viewModel.userNameTextWatcher}"/>



